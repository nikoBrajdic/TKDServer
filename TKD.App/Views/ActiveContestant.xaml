                </Grid>
                <Grid Grid.Row="5"
                      Grid.ColumnSpan="4"
                      Visibility="{Binding Path=IsEnabled6, Converter={StaticResource ShowHideReferee}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*" />
                        <ColumnDefinition Width="110*" />
