        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Bottom"
              Margin="296,0,10,10"
              Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="Start"
                    Grid.Column="0"
                    Content="Start"
                    Margin="10,3"
                    Click="Start_Click" />
            <Button x:Name="ShowPoints"
                    Grid.Column="1"
                    Content="Show Points"
                    Margin="10,3"
                    Click="ShowPoints_Click" />
            <Button x:Name="AcceptScore"
                    Grid.Column="2"
                    Content="Accept"
                    Click="AcceptScore_Click"
                    Margin="10,3" />
            <Button x:Name="CloseWindow"
                    Grid.Column="3"
                    Content="Close"
                    Click="CloseWindow_Click"
                    Margin="10,3" />
        </Grid>
        <Rectangle Margin="307,45,21,82"
                   Stroke="Black">
            <Rectangle.Fill>
                <VisualBrush x:Name="MirrorWindow"
                             Stretch="Uniform" />
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
