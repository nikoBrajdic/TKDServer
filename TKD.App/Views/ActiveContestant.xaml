                </Grid>
                <Grid Grid.Row="6"
                      Grid.ColumnSpan="4"
                      Visibility="{Binding Path=IsEnabled7, Converter={StaticResource ShowHideReferee}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*" />
                        <ColumnDefinition Width="110*" />
                        <ColumnDefinition Width="110*" />
                        <ColumnDefinition Width="35*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="7"
                           Grid.Row="7" />
                    <TextBox x:Name="LScore7"
