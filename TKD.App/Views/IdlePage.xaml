<Page x:Class="TKD.App.Views.IdlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TKD.App.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="IdlePage"
      Background="BlanchedAlmond">

    <Viewbox>
        <Grid>
            <Label x:Name="ContestName" 
                   Foreground="#FF7C1414"
                   Content="{Binding Path=ContestName, FallbackValue=Contest Name}"
                   FontSize="5" />
            <Label x:Name="Date" 
                   Foreground="#FF000044"
                   Content="{Binding Path=Date, FallbackValue=Current Date}"
                   HorizontalContentAlignment="Center"
                   FontSize="4"
                   Margin="0,6,0,0" />
        </Grid>
    </Viewbox>
</Page>
