<Window x:Name="ChoosePoomsae"
        x:Class="TKD.App.Views.PoomsaeChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TKD.App.Views"
        mc:Ignorable="d"
        Title="Poomsae No.?"
        Height="131"
        Width="208"
        BorderBrush="#FF3F3F46"
        Foreground="#FFF1F1F1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="Poomsae1Button"
                Content="1"
                FontSize="40"
                Grid.Column="0"
                Click="ButtonClick" />
        <Button x:Name="Poomsae2Button"
                Content="2"
                FontSize="40"
                Grid.Column="1"
                Click="ButtonClick" />

    </Grid>
</Window>
